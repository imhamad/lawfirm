{% set createdDate_d = node.getCreatedTime|date('d') %}
{% set createdDate_m = node.getCreatedTime|date('M') %}
<div class="row pt-xl">

	<div class="col-md-12">

		<div class="blog-posts single-post mt-xl">

			<article class="post post-large blog-single-post">

				<div class="post-date">
					<span class="day">{{ createdDate_d }}</span>
					<span class="month">{{ createdDate_m }}</span>
				</div>

				<div class="post-content">

					<h1>{{label}}</h1>

					<div class="divider divider-primary divider-small mb-xl">
						<hr>
					</div>

					<div class="post-meta">
						<span><i class="fa fa-user"></i> By <a href="#">{{ author_name|striptags }}</a> </span>
						<span><i class="fa fa-tag"></i>{{content.field_custom_blog_tags }}</span>
						<span><i class="fa fa-comments"></i> <a href="#">{{ comment_count }} Comments</a></span>
					</div>

					<img src="{{ file_url(node.field_image.entity.fileuri) }}" class="img-responsive pull-left mb-xs mr-xl" alt="" style="width: 195px;">

					<p class="lead">{{ content.body['#object'].body.summary }}</p>

					{{content.body}}

					<div class="pt-sm pb-xs">
						<!-- AddThis Button BEGIN -->
						<div class="addthis_toolbox addthis_default_style">
							<a class="addthis_button_facebook_like" fb:like:layout="button_count"></a>
							<a class="addthis_button_tweet"></a>
							<a class="addthis_button_pinterest_pinit"></a>
							<a class="addthis_counter addthis_pill_style"></a>
						</div>
						<script type="text/javascript" src="//s7.addthis.com/js/300/addthis_widget.js#pubid=xa-50faf75173aadc53"></script>
						<!-- AddThis Button END -->
					</div>

					<div class="post-block post-author mt-xl clearfix">
						<h4 class="mt-xl mb-none">Author</h4>
						<div class="divider divider-primary divider-small mb-xl">
							<hr>
						</div>
						<div class="img-thumbnail">
							<a href="blog-post.html">
								{{ author_picture }}
							</a>
						</div>
						<p><strong class="name mb-md">{{ author_name|striptags }}</strong></p>
						<p class="mt-xs">{{ content.body['#object'].body.summary }}.</p>
					</div>


				</div>
			</article>

		</div>

	</div>

</div>